@{
    ViewBag.Title = "Naturaleza";
}



<main id="appNaturaleza" class="row">
    <div class="div-bg col-12 row">
        <div class="col-3 col-md-1 p-2">
            <div class="card ico-osel">
                <i class="bg-osel icon icon-gradient lnr lnr-users"></i>
            </div>
        </div>
        <div class="col-9 col-md-11 p-2">
            <h5>Familias</h5>
            <span>Administración de familias por tipo naturaleza</span>
        </div>
    </div>

    <!-- Inicio acordeón -->
    <div id="acordeonProductos" class="col-12 mt-3">
        <div class="card">
            <div class="card-header bg-blue-dark"
                 style="cursor: pointer"
                 @@click="abreAcordion"
                 data-toggle="collapse"
                 data-target="#collapseOne"
                 aria-expanded="true"
                 aria-controls="collapseOne">
                <div class="row">
                    <div class="col-11">
                        <h5 class="m-0 text-white">Filtros</h5>
                    </div>
                    <div class="col-1">
                        <span :class="icono" class="text-white"></span>
                    </div>
                </div>
            </div>
            <div id="collapseOne"
                 class="collapse"
                 aria-labelledby="headingOne"
                 data-parent="#acordeonProductos"
                 aria-describedby="accordion">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-4">              
                            <div class="d-flex w-100">
                                <button class="btn h-75 py-2 text-nowrap btn-prepend-primary">Tipo Naturaleza</button>
                                <div class="w-100 d-flex align-items-end pt-4 px-1 justify-content-around">
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" ref="chkAgua" v-model="check.aguaFiltro" @@click="checkTipo(1, $event)" />
                                        <label class="custom-control-label" @@click="$refs.chkAgua.click()">Agua</label>
                                    </div>
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" ref="chkSolvente" v-model="check.solventeFiltro" @@click="checkTipo(2, $event)" />
                                        <label class="custom-control-label" @@click="$refs.chkSolvente.click()">Solvente</label>
                                    </div>
                                </div>
                            </div>                      
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text btn-prepend-primary">Familia</div>
                                </div>
                                <input type="text" class="form-control" autocomplete="off" v-model="value.descripcionFiltro" />
                            </div>
                        </div>
                        <div class="col-12 col-md-3">
                            <button class="btn btn-prepend-primary" @@click="getNaturalezas">
                                <span class="lnr lnr-magnifier">&nbsp;</span>
                                Consultar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Fin Acordeón -->


    <div class="col-12">
        <div class="w-100 d-flex justify-content-between">
            <button class="btn btn-prepend-primary" @@click="agregarNaturaleza">
                <span class="bi bi-plus-square">&nbsp;</span>
                Agregar familia
            </button>
        </div>
    </div>

    <div class="col-12 mt-3" v-cloak>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead class="header-table">
                    <tr>
                        <th>Acciones</th>
                        <th>
                            <div class="d-flex justify-content-between align-items-end w-100">
                                ID
                                <div>
                                    <div class="w-100" style="max-height:13px;">
                                        <button class="bg-transparent text-light border-0 p-0 m-0" :disabled="array.naturalezas.length === 0" :class="sorted.id.iconoAsc" role="button" @@click="eligeFiltro(1)"></button>
                                    </div>
                                    <div class="w-100" style="max-height:13px;">
                                        <button class="bg-transparent text-light border-0 p-0 m-0" :disabled="array.naturalezas.length === 0" :class="sorted.id.iconoDesc" role="button" @@click="eligeFiltro(1, false)"></button>
                                    </div>
                                </div>
                            </div>
                        </th>
                        <th>
                            <div class="d-flex justify-content-between align-items-end w-100">
                                Tipo Naturaleza
                                <div>
                                    <div class="w-100" style="max-height:13px;">
                                        <button class="bg-transparent text-light border-0 p-0 m-0" :disabled="array.naturalezas.length === 0" :class="sorted.tipo.iconoAsc" role="button" @@click="eligeFiltro(2)"></button>
                                    </div>
                                    <div class="w-100" style="max-height:13px;">
                                        <button class="bg-transparent text-light border-0 p-0 m-0" :disabled="array.naturalezas.length === 0" :class="sorted.tipo.iconoDesc" role="button" @@click="eligeFiltro(2, false)"></button>
                                    </div>
                                </div>
                            </div>
                        </th>
                        <th>
                            <div class="d-flex justify-content-between align-items-end w-100">
                                Familia
                                <div>
                                    <div class="w-100" style="max-height:13px;">
                                        <button class="bg-transparent text-light border-0 p-0 m-0" :disabled="array.naturalezas.length === 0" :class="sorted.familia.iconoAsc" role="button" @@click="eligeFiltro(3)"></button>
                                    </div>
                                    <div class="w-100" style="max-height:13px;">
                                        <button class="bg-transparent text-light border-0 p-0 m-0" :disabled="array.naturalezas.length === 0" :class="sorted.familia.iconoDesc" role="button" @@click="eligeFiltro(3, false)"></button>
                                    </div>
                                </div>
                            </div>
                        </th>
                        <th>
                            <div class="d-flex justify-content-between align-items-end w-100">
                                Orden
                                <div>
                                    <div class="w-100" style="max-height:13px;">
                                        <button class="bg-transparent text-light border-0 p-0 m-0" :disabled="array.naturalezas.length === 0" :class="sorted.orden.iconoAsc" role="button" @@click="eligeFiltro(4)"></button>
                                    </div>
                                    <div class="w-100" style="max-height:13px;">
                                        <button class="bg-transparent text-light border-0 p-0 m-0" :disabled="array.naturalezas.length === 0" :class="sorted.orden.iconoDesc" role="button" @@click="eligeFiltro(4, false)"></button>
                                    </div>
                                </div>
                            </div>
                        </th>
                        <th>
                            <div class="d-flex justify-content-between align-items-end w-100">
                                Estatus
                                <div>
                                    <div class="w-100" style="max-height:13px;">
                                        <button class="bg-transparent text-light border-0 p-0 m-0" :disabled="array.naturalezas.length === 0" :class="sorted.estatus.iconoAsc" role="button" @@click="eligeFiltro(5)"></button>
                                    </div>
                                    <div class="w-100" style="max-height:13px;">
                                        <button class="bg-transparent text-light border-0 p-0 m-0" :disabled="array.naturalezas.length === 0" :class="sorted.estatus.iconoDesc" role="button" @@click="eligeFiltro(5, false)"></button>
                                    </div>
                                </div>
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="item in array.naturalezas" :key="item.id" v-cloak>
                        <td class="text-nowrap">
                            <button class="btn btn-sm" @@click="getNaturaleza(item)" title="Detalle familia">
                                <span class="lnr lnr-magnifier"></span>
                            </button>
                            <button class="btn btn-sm" @@click="naturalezaElimina(item)" title="Eliminar familia">
                                <span class="bi bi-trash"></span>
                            </button>
                        </td>
                        <td  v-cloak>{{item.id_naturaleza}}</td>
                        <td  v-cloak>{{item.tipoNaturaleza === 1 ? 'Agua':'Solvente'}}</td>
                        <td  v-cloak>{{item.descripcion}}</td>
                        <td  v-cloak>{{item.orden}}</td>
                        <td  v-cloak>{{item.estatus ? 'Activa':'Inactiva'}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal" ref="modalNaturaleza" data-backdrop="static" data-keyboard="false" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-fullscreen-sm-down modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">{{tituloModal}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12 col-md-3">
                            <label class="label-primary m-0">Tipo Naturaleza</label>
                            <div class="d-flex w-100 justify-content-around align-items-center">
                                <label class="label-primary m-0 d-flex align-items-center" @@click="$refs.rdAgua.click()">
                                    Agua
                                    &nbsp;
                                    <input type="radio" :checked="check.agua" name="tipoNaturaleza" ref="rdAgua" @@click="check.agua = true;check.solvente = false;" />
                                </label>                             
                                <label class="label-primary m-0 d-flex align-items-center" @@click="$refs.rdSolvente.click()">
                                    Solvente
                                    &nbsp;
                                    <input type="radio" :checked="check.solvente" name="tipoNaturaleza" ref="rdSolvente" @@click="check.agua = false;check.solvente = true;" />
                                </label>
                            </div>
                        </div>
                        <div class="col-12 col-md-3">
                            <label class="label-primary m-0">Descripción</label>
                            <input v-model="value.descripcion" class="cg-input-adicional p-1" type="text" />
                        </div>
                        <div class="col-12 col-md-3">
                            <label class="label-primary m-0">Orden</label>
                            <input v-model="value.orden" class="cg-input-adicional p-1" type="number" step="1" min="0" max="150" inputmode="numeric" />
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="custom-control custom-switch d-flex align-items-end h-100">
                                <input type="checkbox" class="custom-control-input" ref="chkEstatus" v-model="check.estatus">
                                <label class="custom-control-label" @@click="$refs.chkEstatus.click()">Activo</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" @@click="guardar">
                        <span class="bi bi-check-circle"></span>
                        Guardar
                    </button>
                    <button type="button" class="btn btn-secondary ml-1" data-dismiss="modal">
                        <span class="bi bi-x-circle"></span>
                        Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>

</main>


<script src="~/js/views/naturaleza.js" asp-append-version="true"></script>