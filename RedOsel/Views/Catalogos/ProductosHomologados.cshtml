@{
    ViewBag.Title = "Productos Homologados";
}

<main class="row" id="appProductosHomologados">
    <div class="div-bg col-12 row">
        <div class="col-3 col-sm-1 p-2">
            <div class="card ico-osel">
                <i class="bg-osel icon icon-gradient bi bi-award h-100 d-flex align-items-center w-100"></i>
            </div>
        </div>
        <div class="col-9 col-sm-11 p-2">
            <h5 class="d-flex w-100 h-100 align-items-center">Productos Homologados</h5>
        </div>
    </div>

    <!-- Inicio acordeón -->
    <div id="acordeonProductos" class="col-12 mt-3">
        <div class="card">
            <div class="card-header bg-blue-dark"
                 style="cursor: pointer"
                 @@click="abreAcordion"
                 data-toggle="collapse"
                 data-target="#collapseOne"
                 aria-expanded="true"
                 aria-controls="collapseOne">
                <div class="row">
                    <div class="col-11">
                        <h5 class="m-0 text-white">Filtros</h5>
                    </div>
                    <div class="col-1">
                        <span :class="icono" class="text-white"></span>
                    </div>
                </div>
            </div>
            <div id="collapseOne"
                 class="collapse"
                 aria-labelledby="headingOne"
                 data-parent="#acordeonProductos">
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-3">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text btn-prepend-primary">Nombre</div>
                                </div>
                                <input type="text" class="form-control" v-model="value.nombreFiltro" />
                            </div>
                        </div>
                        <div class="col-12 col-md-3">
                            <button type="button" class="btn btn-secondary" @@click="limpiar(0)">
                                <span class="lnr lnr-undo">&nbsp;</span>
                                Limpiar filtros
                            </button>
                            &nbsp;
                            <button class="btn btn-prepend-primary" @@click="getOrganizaciones">
                                <span class="lnr lnr-magnifier">&nbsp;</span>
                                Consultar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Fin Acordeón -->

    <div class="col-12">
        <div class="w-100 d-flex justify-content-between">
            <button class="btn btn-prepend-primary" @@click="agregaHomologacion">
                <span class="bi bi-plus-square">&nbsp;</span>
                Agregar homologación
            </button>
        </div>
    </div>

    <div class="col-12 mt-3">

        <div class="table-responsive" v-cloak>
            <table class="table table-striped" v-cloak>
                <thead class="header-table">
                    <tr>
                        <th>
                            Acciones

                        </th>
                        <th>
                            <div class="d-flex justify-content-between align-items-end w-100">
                                Nombre
                                <div>
                                    <div class="w-100" style="max-height:13px;">
                                        <button class="bg-transparent text-light border-0 p-0 m-0" :disabled="array.productos.length === 0" :class="sorted.nombre.iconoAsc" role="button" @@click="eligeFiltro(1)"></button>
                                    </div>
                                    <div class="w-100" style="max-height:13px;">
                                        <button class="bg-transparent text-light border-0 p-0 m-0" :disabled="array.productos.length === 0" :class="sorted.nombre.iconoDesc" role="button" @@click="eligeFiltro(1, false)"></button>
                                    </div>
                                </div>
                            </div>
                        </th>
                        <th>    
                            <div class="d-flex justify-content-between align-items-end w-100">
                                Publicado
                                <div>
                                    <div class="w-100" style="max-height:13px;">
                                        <button class="bg-transparent text-light border-0 p-0 m-0" :disabled="array.productos.length === 0" :class="sorted.publicado.iconoAsc" role="button" @@click="eligeFiltro(3)"></button>
                                    </div>
                                    <div class="w-100" style="max-height:13px;">
                                        <button class="bg-transparent text-light border-0 p-0 m-0" :disabled="array.productos.length === 0" :class="sorted.publicado.iconoDesc" role="button" @@click="eligeFiltro(3, false)"></button>
                                    </div>
                                </div>
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-cloak v-for="item in array.productos" :key="item.id_producto_homologado">
                        <td class="text-nowrap">
                            <button class="btn btn-sm" @@click="getHomo(item)" title="Detalle homologación">
                                <span class="lnr lnr-magnifier"></span>
                            </button>
                            <button class="btn btn-sm" @@click="homoElimina(item)" title="Eliminar homologación">
                                <span class="bi bi-trash"></span>
                            </button>
                        </td>
                        <td>{{item.nombre}}</td>
                        <td>{{item.publicado ? 'Sí': 'No'}}</td>
                    </tr>
                </tbody>
            </table>

            <div v-if="array.productos.length === 0">
                <h4>Sin homologaciones</h4>
            </div>

        </div>

    </div>


    <!-- Modal -->
    <div class="modal fade" ref="modalEmpresa" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">{{tituloModal}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12 col-md-5">
                            <label class="m-0 label-primary">Nombre</label>
                            <input type="text" class="cg-input-adicional p-1" v-model="value.nombre" />
                        </div>
                        <div class="col-12 col-md-2">
                            <div class="w-100 h-100 d-flex align-items-center justify-content-start mt-3">
                                <div class="custom-control custom-switch">
                                    <input type="checkbox" class="custom-control-input" id="customSwitch1" v-model="check.publicado">
                                    <label class="custom-control-label" for="customSwitch1">Publicado</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-md-5">
                            <div>
                                <button class="btn-prepend-primary my-2 btn" @@click="agregaArchivo(0)">
                                    <i class="bi bi-search"></i>
                                    &nbsp;
                                    Agregar logo mini
                                </button>
                                &nbsp;
                                <i><small>(120px x 80px ó 130px x 75px)</small></i>
                            </div>
                            <a class="d-block w-100" v-if="nombreArchivoMini.trim() !== ''">Archivo elegido:&nbsp;{{nombreArchivoMini}}</a>
                            <a class="d-block w-100" v-if="logoMini.trim() !== ''" target="_blank" :href="hrefLogoMini">Archivo actual:&nbsp;{{logoMini}}</a>
                        </div>
                        <div class="col-12 col-md-5">
                            <div>
                                <button class="btn-prepend-primary my-2 btn" @@click="agregaArchivo(1)">
                                    <i class="bi bi-search"></i>
                                    &nbsp;
                                    Agregar logo
                                </button>
                                &nbsp;
                                <i><small>(220px x 160px ó 250px x 180px)</small></i>
                            </div>
                            <a class="d-block w-100" v-if="nombreArchivo.trim() !== ''">Archivo elegido:&nbsp;{{nombreArchivo}}</a>
                            <a class="d-block w-100" v-if="logo.trim() !== ''" target="_blank" :href="hrefLogo">Archivo actual:&nbsp;{{logo}}</a>
                        </div>


                        <div class="col-12">
                            <ul class="nav nav-tabs" id="myTab" role="tablist">
                                <li class="nav-item border-bottom" role="presentation">
                                    <button class="nav-link active" ref="btnDescripcion" data-toggle="tab" data-target="#descripcion" type="button" role="tab" aria-controls="home" aria-selected="true">
                                        Descripción
                                    </button>
                                </li>
                                <li class="nav-item ml-1 border-bottom" role="presentation">
                                    <button class="nav-link" data-toggle="tab" :disabled="disabled.certificacion" data-target="#certificacion" type="button" role="tab" aria-controls="contact" aria-selected="false">
                                        Certificaciones y Productos
                                    </button>
                                </li>
                            </ul>

                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show active py-3" id="descripcion">
                                    <textarea id="taDescripcion"></textarea>
                                </div>

                                <div class="tab-pane fade py-3" id="certificacion" role="tabpanel">

                                    <div v-if="show.registros" class="row">
                                        <div class="col-12 p-0">
                                            <button class="btn btn-prepend-primary" @@click="insertaRegistro" title="Inserta nuevo registro">
                                                <span class="bi bi-plus-square"></span>
                                                Agregar registro
                                            </button>
                                            <button type="button" class="btn btn-outline-success ml-1" v-if="array.registros.length > 0" @@click="vistaPrevia">
                                                <span class="bi bi-eye"></span>
                                                Vista Previa
                                            </button>
                                        </div>
                                        <div class="col-12 table-responsive mt-2 p-0">
                                            <table class="table table-bordered table-hover" v-if="array.registros && array.registros.length > 0">
                                                <colgroup>
                                                    <col style="width:15%" />
                                                    <col style="width:5%" /> 
                                                    <col style="width:10%" />
                                                    <col style="width:10%" />
                                                    <col style="width:30%" />
                                                    <col style="width:30%" />
                                                </colgroup>
                                                <thead>
                                                    <tr>
                                                        <th>Acciones</th>
                                                        <th>ID</th>
                                                        <th>Orden</th>
                                                        <th>Publicado</th>
                                                        <th>Certificados/Dictámenes/Sellos</th>
                                                        <th>Productos</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr v-for="(item, index) in array.registros" :key="index">
                                                        <td>
                                                            <div class="d-flex w-100 h-100 justify-content-center align-items-center">
                                                                <button title="Editar Registro" @@click="editarRegistro(item)" class="btn btn-success btn-sm">
                                                                    <span class="bi bi-pencil"></span>
                                                                </button>
                                                                <button title="Eliminar Registro " @@click="eliminaRegistro(item)" class="btn btn-danger btn-sm ml-1">
                                                                    <span class="bi bi-trash"></span>
                                                                </button>
                                                                <button class="btn btn-info btn-sm ml-1" title="Alta de Productos" @@click="altaProductos(item)">
                                                                    <span class="bi bi-p-circle"></span>
                                                                </button>
                                                                <button class="btn btn-secondary btn-sm ml-1" title="Alta de Certificados/Dictámenes/Sellos" @@click="altaCertificados(item)">
                                                                    <span class="bi bi-c-circle"></span>
                                                                </button>
                                                            </div>
                                                        </td>
                                                        <td>{{item.id_producto_homologado_registro}}</td>
                                                        <td>{{(item.orden ?? -1) === -1 ? 'Sin orden ingresado': item.orden}}</td>
                                                        <td>{{(item.publicado ?? false) ? 'Publicado': 'No publicado'}}</td>                                               
                                                        <td>
                                                            <ul class="p-0 m-0" v-if="item.certificaciones && item.certificaciones.length > 0">
                                                                <li v-for="i in item.certificaciones" class="list-unstyled d-flex align-items-center">
                                                                    <span class="bi px-1 py-0 bi-pencil btn btn-success" style="font-size:12px;" @@click="getCertificado(i)" title="Editar Certificación"></span>
                                                                    <span class="bi px-1 py-0 bi-trash btn btn-danger ml-1" style="font-size:12px;" @@click="certificadoElimina(i)" title="Elimina Certificación"></span>
                                                                    &nbsp;
                                                                    <a :href="i.href" target="_blank" :alt="i.titulo">                                                                            {{i.titulo}}
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </td>
                                                        <td>
                                                            <ul class="m-0 p-0" v-if="item.productos && item.productos.length > 0">
                                                                <li v-for="i in item.productos" class="list-unstyled d-flex align-items-center">
                                                                    <span class="bi px-1 py-0 bi-pencil btn btn-success" style="font-size:12px;" @@click="getProductos(i)" title="Edita Producto"></span>
                                                                    <span class="bi px-1 py-0 bi-trash btn btn-danger ml-1" style="font-size:12px;" @@click="productoElimina(i)" title="Elimina Producto"></span>
                                                                 
                                                                    &nbsp;
                                                                    <a :href="i.href" target="_blank" :alt="i.titulo">
                                                                        {{i.producto}}
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <div v-show="show.registro">
                                        <button class="btn btn-outline-dark my-2" title="Regresar a la tabla principal" @@click="regresa">
                                            <span class="bi bi-chevron-left"></span>
                                            Regresar a tabla principal
                                        </button>
                                        <div class="row">
                                            <div class="col-6 col-md-3">
                                                <label>Orden</label>
                                                <input type="number" class="form-control border" v-model="value.orden" step=".5" min="0" max="99" />
                                            </div>
                                            <div class="col-6 col-md-2">
                                                <div class="w-100 h-100 d-flex align-items-end justify-content-start ">
                                                    <div class="custom-control custom-switch">
                                                        <input type="checkbox" class="custom-control-input" id="customSwitch2" v-model="check.publicadoRegistro">
                                                        <label class="custom-control-label" for="customSwitch2">Publicado</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-6 col-md-3">
                                                <div class="d-flex h-100 align-items-end">
                                                    <button class="btn btn-outline-primary" @@click="guardarRegistro">
                                                        <span class="bi bi-save"></span>
                                                        &nbsp;
                                                        Guardar
                                                    </button>   
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div v-show="show.certificados">
                                        <button class="btn btn-outline-dark my-2" title="Regresar a la tabla principal" @@click="regresa">
                                            <span class="bi bi-chevron-left"></span>
                                            Regresar a tabla principal
                                        </button>
                                        <certificacion ref="certificacion"
                                                       :id-tipo-multimedia="tipoMultimedia.certificacion"
                                                       :id-origen="idProductoHomologadoRegistro"
                                                       @@get-registros="getRegistros">
                                        </certificacion>
                                    </div>

                                    <div v-show="show.productos">
                                        <button class="btn btn-outline-dark my-2" title="Regresar a la tabla principal" @@click="regresa">
                                            <span class="bi bi-chevron-left"></span>
                                            Regresar a tabla principal
                                        </button>
                                        <div class="w-100 my-2 d-flex flex-column ">
                                            <label>Nombre del producto</label>
                                            <div class="w-100 d-flex flex-column flex-md-row">
                                                <input class="form-control" style="max-width:580px;" v-model="value.producto" />
                                                <button class="btn btn-outline-primary my-2 my-md-0 w-fit ml-md-1 ml-0" @@click="guardaProducto">
                                                    <span class="bi bi-save"></span>
                                                    &nbsp;
                                                    Guardar
                                                </button>
                                            </div>
                                        </div>                               
                                    </div>
                                </div>


                            </div>

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                   
                    <button type="button" class="btn btn-primary" @@click="guardar">
                        <span class="bi bi-check-circle"></span>
                        Guardar
                    </button>
                    <button type="button" class="btn btn-secondary ml-1" data-dismiss="modal">
                        <span class="bi bi-x-circle"></span>
                        Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" ref="modalVistaPrevia" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Vista Previa Certificados</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="table-responsive w-100 d-flex justify-content-center flex-column align-items-center">
                        <table class="rounded-2 table-bordered" v-if="array.certificados.some(i => i.productos.length > 0 && i.certificaciones.length > 0)">
                            <thead class="fs-6-5  bg-gray-light p-3">
                                <tr class="p-3">
                                    <th class="p-2">Producto</th>
                                    <th class="p-2">Certificado/Dictamen/Sello</th>
                                </tr>
                            </thead>
                            <tbody class="fs-6-5">
                                <tr v-for="item in array.certificados" v-show="item.productos && item.productos.length > 0 && item.certificaciones && item.certificaciones.length > 0">
                                    <td class="p-2">
                                        <ul class="p-0 m-0">
                                            <li class="list-unstyled" v-if="item.productos && item.productos.length > 0" v-for="i in item.productos">{{i.producto}}</li>
                                        </ul>
                                    </td>
                                    <td class="p-2">
                                        <ul class="p-0 m-0">
                                            <li class="list-unstyled" v-if="item.certificaciones && item.certificaciones.length > 0" v-for="i in item.certificaciones">
                                                <a :href="i.href" target="_blank" download class="bi bi-download text-decoration-none" :title="i.titulo">&nbsp;{{i.titulo}}</a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            </tbody>
                        </table>          

                        <div class="w-100"></div>
                        
                        <table class="rounded-2 table-bordered mt-2" v-if="array.certificados.some(i => i.productos.length === 0 && i.certificaciones.length > 0)">
                            <thead class="fs-6-5  bg-gray-light p-3">
                                <tr class="p-3">
                                    <th class="p-2">Certificado/Dictamen/Sello</th>
                                </tr>
                            </thead>
                            <tbody class="fs-6-5">
                                <tr v-for="item in array.certificados" v-show="item.productos && item.productos.length === 0 && item.certificaciones && item.certificaciones.length > 0">                                   
                                    <td class="p-2">
                                        <ul class="p-0 m-0">
                                            <li class="list-unstyled" v-if="item.certificaciones && item.certificaciones.length > 0" v-for="i in item.certificaciones">
                                                <a :href="i.href" target="_blank" download class="bi bi-download text-decoration-none" :title="i.titulo">&nbsp;{{i.titulo}}</a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div v-if="array.certificados.length === 0" class="w-100 text-center">
                        <h4>Sin registros publicados para vista previa</h4>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</main>

<partial name="Componentes/Componente_Archivos" />
<script src="~/js//views/productos-homologados.js" asp-append-version="true"></script>