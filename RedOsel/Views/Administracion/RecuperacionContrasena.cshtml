
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pinturas Osel - Recuperación de contraseña</title>
    <!-- Bootstrap core CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/css/main.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
</head>
<body class="header-table" id="appRecupera">
    <div class="text-center cargando-c fondoCargando-2">
        <div class="loader">
            <div class="container-c loader">
                <div class="half"></div>
                <div class="half"></div>
            </div>
        </div>
    </div>

    <div class="container text-center">
        <div class="row text-center mt-5 pt-5" style="display:inline-block !important;">
            <div class="col-12 text-center">
                <div class="card bg-card">
                    <div class="card-body p-5">
                        <div style="justify-content:center !important;width:300px;">
                            <a class="navbar-brand">
                                <img class="img-fluid w-100 d-none d-sm-block" src="~/lib/administracion/images/logo.png" />
                                <img class="img-fluid w-100 d-block d-sm-none" src="~/lib/administracion/images/isologo-color.png" />
                            </a>
                            <h4 class="text-dark">Restablecer contraseña</h4>
                            <div class="mt-3">
                                <label class="text-dark font-weight-bold">Nueva Contraseña</label>
                                <input type="password" autocomplete="off" required v-model="value.password" />
                            </div>
                            <div class="mt-2">
                                <label class="font-weight-bold text-dark">Confirmar Contraseña</label>
                                <input type="password" autocomplete="off" required v-model="value.confirma" :disabled="value.password.length === 0" />
                                <button type="button" class="font-weight-bold mt-3 btn btn-lg btn-primary text-white" @@click="actualiza">
                                    <i class="bi bi-check-circle"></i>&nbsp;
                                    Enviar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <partial name="Alertas" />


    <script src="~/lib/axios/axios.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/vue/vue.global.prod.js"></script>
    <script src="~/js/views/recupera.js" asp-append-version="true"></script>
</body>
</html>
