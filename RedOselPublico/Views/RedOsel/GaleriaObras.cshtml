@{
    ViewBag.Title = "Galerías de Obras";
}


<section id="appGaleriaDeObras">
    <div class="text-center pt-4">
        <div class="title-container">
            <span class="border-text fw-bolder " style="color: #624d2e !important">
                Galería de Obras
            </span>
            <div class="border-box" style="border-color:#624d2e !important"></div>
        </div>
        <div class="m-0  px-xl-5 px-md-2 fs-7 text-center">
            <p class="m-0 fs-7 px-xl-5 px-md-2">
            </p>
        </div>
    </div>

    <div class="container my-2 h4" v-if="array.galeriaObrasMini.length === 0">
        @* Sin datos disponibles *@
    </div>

    <div class="container my-2" v-if="array.galeriaObrasMini && array.galeriaObrasMini.length > 0">
            <div class="d-flex justify-content-center align-items-center w-100">
            <div class="col-12 col-md-9 col-xl-6 mt-0">
                <div id="carouselExampleCaptions2" class="carousel slide carousel-fade" data-bs-ride="carousel">

                    <div class="carousel-indicators">
                        <button v-for="(item, index) in array.imagenesObra"
                                type="button"
                                data-bs-target="#carouselExampleCaptions2"
                                :data-bs-slide-to="index"
                                :class="{'active': index === 0}"
                                :aria-current="index === 0 ? 'true': ''"
                                :aria-label="'Slide ' + (index + 1) "></button>
                    </div>

                    <div class="carousel-inner  rounded-2">
                        <div class="carousel-item py-2" v-for="(item, index) in array.imagenesObra" :class="{'active': index === 0}">
                            <h6 class="text-center fw-semibold m-0" v-cloak>{{obraActual}}</h6>
                            <div class="d-flex justify-content-center align-items-center w-100">
                             
                                <img :src="item.src" class="d-block mx-auto" :alt="item.alt" style="height:350px; width:auto;">
                            </div>
                        </div>
                    </div>

                    <button class="carousel-control-prev m-0" v-if="array.imagenesObra.length > 1" type="button" data-bs-target="#carouselExampleCaptions2" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next m-0" v-if="array.imagenesObra.length > 1" type="button" data-bs-target="#carouselExampleCaptions2" data-bs-slide="next">
                        <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>

                </div>
            </div>
        </div>





        <div class="d-flex justify-content-center align-items-center w-100">
            <div class="col-12 col-md-9 mt-0">

                <div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-bs-ride="carousel">

                    <div class="carousel-inner">
                        <div class="carousel-item  rounded-3" v-for="(item, index) in array.galeriaObrasMini" :class="index === 0 ? 'active': ''">
                            <div class="row justify-content-center align-items-center d-flex w-100">
                                <div class="col-6 col-md-4 col-xl-2 px-1" v-for="i in item">
                                    <div class="px-auto text-truncate  text-white text-center hover-img">
                                        <div class="fs-7 text-truncate text-dark ps-2">{{i.nombre_corto ?? '' !== '' ? i.nombre_corto : i.descripcion}}</div>
                                        <div class="w-100 justify-content-center align-items-center d-flex">
                                            <img :src="i.src" class="d-block shadow-osel rounded-3 bg-gray-light" @@click="verObra(i)" role="button" :alt="i.alt" style="height:120px; width:auto;" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button class="carousel-control-prev m-0" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon bg-dark" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next m-0" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                        <span class="carousel-control-next-icon bg-dark" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>

                </div>

            </div>
        </div>
   
    </div>

</section>

<script src="~/js/views/galeria-obras.js" asp-append-version="true"></script>