@{
    ViewBag.Title = "Galerías de Color";
}


<section id="appGaleriasColor">
    <div class="text-center pt-4">
        <div class="title-container">
            <span class="border-text fw-bolder ">Galerías de Color</span>
            <div class="border-box"></div>
        </div>
        <p class="text-normal m-0 fs-7 text-center">
        </p>
    </div>

    <div class="container my-2 px-md-5" v-cloak>
        <div class="row h-100 px-lg-5">
            <div v-cloak v-for="item in array.galerias" class="col-12 col-md-6 px-3">
                <div class="flex-md-column card shadow-osel border px-3 py-4 flex-lg-row align-items-center rounded-4 justify-content-sm-between d-flex gap-3">
                    <div class="d-flex w-100 h-100 justify-content-between align-items-lg-center gap-3">
                        <div class="d-flex flex-column align-items-md-center align-items-lg-start">
                            <p class="m-0 text-lg fw-bold text-xs text-md-center text-lg-start">
                                {{item.titulo}}
                                <br />
                                <span class="text-date fw-bold text-blue">
                                    {{item.fecha}}
                                </span>
                            </p>                       
                        </div>
                        <a role="button" :href="item.ruta" target="_blank" class="me-2 btn btn-custom-2 mt-2">
                            Descargar
                            &nbsp;
                            <span class="bi bi-download"></span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-12" v-if="array.galerias.length === 0">
                @* <h3 class="fw-bold text-center">Sin galerías de color disponibles</h3> *@
            </div>
        </div>
    </div>
</section>

<script src="~/js/views/galerias-color.js" asp-append-version="true"></script>