                                            <a target="_blank" class="fs-6-5 text-decoration-none text-dark" href="~/Documentos/Manuales/curriculum-osel-express.pdf" class="py-0">
                                                <span role="button" class="fw-bold fs-7 bi bi-download rounded px-1 py-0 btn btn-sm text-warning-2" title="Descargar"></span>
                                                &nbsp;
                                                Manual
                                            </a>
                                        </li>
                                    </ul>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <img :src="srcImagen" class="rounded-img d-none d-md-block img-fluid rounded-circle mb-3 icon-card-osel" alt="Equipos de Pintura Osel.com" />
            </div>
           
        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" ref="modalEquipos" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5"><b>{{tituloModal}}</b></h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row w-100 h-100">
                        <div class="col-12 col-md-8 col-xl-9">
                            <ul>
                                <li v-for="item in array.equipos" class="list-unstyled py-2" :class="{ 'fw-bold': item.over }" @@mouseover="verImagen(item)">
                                    <a :href="item.href" target="_blank" role="link" class="text-decoration-none text-dark">
                                        <span class="bi btn btn-sm btn-light bi-download border shadow-osel"></span>
                                        &nbsp;
                                        {{item.descripcion}}
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-12 col-md-3 col-xl-3">
                          <div class="w-100 h-100 d-flex justify-content-center align-items-center">
                                <img class="img-fluid" :src="src" style="height:225px;" />
                          </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


