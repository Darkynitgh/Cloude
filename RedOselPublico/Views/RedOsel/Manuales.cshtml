        <div class="w-100 mt-5 mb-2  d-flex justify-content-center" v-if="show.detalle" v-cloak>
            <img :src="srcImagen" class="rounded-img d-block d-md-none img-fluid rounded-circle mb-3 icon-card-osel" alt="Equipos de Pintura Osel.com" />

            <div class="border-osel rounded-4 p-2 d-flex flex-column flex-md-row justify-content-center align-items-center w-card-osel" id="refFocus">
              

                <div v-if="show.precios" class="bg-osel rounded-4 px-5 py-2 overflow-y-auto w-card-osel " style="height:380px;">
                    <div class="row mt-3">
                        <div class="col-6 col-md-4" v-for="(item, index) in array.marcas">
                            <div class="w-100 h-100 justify-content-center item-aligns-center d-flex">
                                <img :src="item.logo" class="hover" role="button" :alt="item.nombre" style="max-height: 100px !important;" @@click="getEquipos(item)">
                            </div>
                        </div>
                    </div>
                </div>

                <div v-if="show.curriculum" style="height:380px;" class="bg-osel overflow-y-auto rounded-4 gap-5 px-5 py-2 d-flex justify-content-center align-items-center w-card-osel ">
                    <div class="rounded-1">
                        <div class="col-12 p-1">
                            <p class="m-0 text-lg fw-normal text-center fs-6-5 pt-3 fw-bold">
                                Currículum extendido
                            </p>
                            <div class="d-flex justify-content-center align-items-center mt-4">
                                <a href="https://www.calameo.com/read/0032277875ac03746025a" target="_blank">
                                    <img src="~/imagenes/Manuales/thumb-curriculum-extendido.png" class="img-curriculum" alt="Pinturas Osel" style="height:125px;" />
                                </a>
                            </div>
                            <div class="text-center">
                                <button data-bs-toggle="dropdown" role="button" class=" dropup me-2 mb-1 btn btn-custom-2 mt-2">
                                    Descargar
                                    &nbsp;
                                    <span class="bi bi-download"></span>
                                    <ul class="dropdown-menu py-1">
                                        <li class="dropdown-item py-0">
                                            <a target="_blank" class="fs-6-5 text-decoration-none text-dark" href="~/Documentos/Manuales/Curriculum_Osel_2024.pdf" class="py-0">
                                                <span role="button" class="fw-bold fs-7 bi bi-download rounded px-1 py-0 btn btn-sm text-warning-2" title="Descargar"></span>
                                                &nbsp;
                                                Manual
                                            </a>
                                        </li>
                                    </ul>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="rounded-1">
                        <div class="col-12 p-1">
                            <p class="m-0 text-lg fw-normal text-center fs-6-5 pt-3 fw-bold">
                                Currículum corto
                            </p>
                            <div class="d-flex justify-content-center align-items-center mt-4">
