@{
    ViewBag.Title = "Fórmulas";
}



<section id="appReformulas">
    <div class="text-center pt-4">
        <div class="title-container">
            <span class="border-text fw-bolder ">Reformulaciones</span>
            <div class="border-box"></div>
        </div>
        <p class="text-normal m-0 fs-7 text-center">
        </p>
    </div>

    <div class="container my-2 px-md-5" v-cloak>
        <div class="row h-100 px-lg-5">
            <div v-cloak v-for="item in array.reformulas" class="col-12 col-md-6 px-3">
                <div class="flex-md-column card shadow-osel border px-3 py-4 flex-lg-row align-items-center rounded-4 justify-content-sm-between d-flex">
                    <div class="d-flex w-100 h-100 justify-content-between align-items-lg-center gap-3">
                        <div class="d-flex flex-column align-items-start">
                            <p class="m-0 fs-6 fw-bold text-start text-warning-3">
                                {{item.nombre}}
                                <br />
                                <span class="text-date fw-bold text-blue">
                                    Fecha act. {{item.fecha}}
                                </span>
                            </p>
                        </div>
                        <button role="button" class="me-2 btn btn-custom-2 mt-2" @@click="verMas(item)">
                            Ver más
                            &nbsp;
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-12" v-if="array.reformulas.length === 0">
                <h3 class="fw-bold text-center">Sin reformulaciones disponibles disponibles</h3>
            </div>
        </div>
    </div>
    
    <!-- Modal -->
    <div class="modal fade" ref="modalDetalle" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header bg-dark">
                    <h1 class="modal-title fs-5 text-white">{{tituloReformula}}</h1>
                    <button type="button" class="btn-close bg-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <h5 class="fw-bold" v-if="array.formulas.length === 0">
                        {{descripcionReformula}}
                    </h5>
                    <table v-if="array.formulas && array.formulas.length > 0">
                        <thead class="bg-gray-light">
                            <tr>
                                <th class="p-2">{{descripcionReformula}}</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="item in array.formulas" >
                                <td class="p-2">
                                    <a role="link" class="text-decoration-none bi bi-download" download :href="item.href" target="_blank">&nbsp;{{item.titulo}}</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div v-if="array.formulas.length === 0">
                        @* <h6>Sin reformulaciones disponibles</h6> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/js/views/reformulaciones.js" asp-append-version="true"></script>