<div class="modal fade " id="modal_success" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" style="z-index:1100">
    <div class="modal-dialog m-auto d-flex justify-content-center align-items-center modal-dialog-scrollable w-size">
        <div class="modal-content modal-radious">
            <div class="modal-body p-0">
                <div class="alerts divAlerta alertaVerde alerta fade show" role="alert" aria-live="assertive" aria-atomic="true" id="alerta_custom">
                    <div class="alerts-header">
                        <span><b></b></span>
                        <strong class="mr-auto"></strong>
                        <small></small>
                    </div>
                    <div class="alerts-body">
                        <div style="height: auto;">
                            <div class="text-center mb-3">
                                <i class="icon icon-verde" aria-hidden="true" id="alert_icono"></i>
                            </div>
                            <div class="alerts-title" id="divTitleSuccess">
