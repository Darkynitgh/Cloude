@{
    ViewBag.Title = "Inicio";
    Layout = null;
}

<html lang="es-mx">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Red Osel - Acceso</title>

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    @* <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet"> *@
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&amp;display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/alertas.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/loader.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="text-center cargando-c fondoCargando-2">
        <div class="loader d-flex h-100 w-100 align-items-center justify-content-center">
            <div class="container-c loader">
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
            </div>
        </div>
    </div>

    <div class="background-container pt-5 vh-lg-100" id="appLogin">
        <div class="background-overlay"></div>
        <div class="content d-flex justify-content-center align-items-center flex-column text-center">
            <div class="w-100 d-flex justify-content-center">
                <img class="img-fluid img-logo" src="~/imagenes/login/osel_white.png" alt="pinturas osel">
            </div>
            <div class="container my-2">
                <div class="d-flex flex-column flex-md-row gap-md-5 justify-content-center align-items-center text-center">
                    <!-- Primera imagen -->
                    <a class="col-6 col-md-3 text-decoration-none text-white mt-md-0 mt-3" role="button" href="https://accounts.zoho.com/signin?service_language=es&servicename=VirtualOffice&signupurl=https://www.zoho.com/es-xl/mail/zohomail-pricing.html&serviceurl=https://mail.zoho.com"
                        rel="nofollow noreferrer" target="_blank">
                        <img src="~/imagenes/login/empleados.png" class="rounded-img img-fluid rounded-circle mb-3 img-circle" alt="Imagen 1">
                        <h3 class="fw-bold fs-4 m-0  mb-2">WEBMAIL</h3>
                        <span role="complementary" class="btn-custom my-2">EMPLEADOS</span>
                    </a>
                    <!-- Segunda imagen -->
                    <a class="col-6 col-md-3 mt-md-0 mt-3 text-decoration-none text-white" role="button" rel="nofollow noreferrer" href="http://www.redosel.com.mx:86/cfdwebrecepcion/asp/Start.aspx" target="_blank">
                        <img src="~/imagenes/login/proveedores.png" class="rounded-img img-fluid rounded-circle mb-3" alt="Imagen 2">
                        <h3 class="fw-bold fs-4 m-0 mb-2">CFD-CFDI</h3>
                        <span role="complementary" class="btn-custom my-2">PROVEEDORES</span>
                    </a>
                    <!-- Tercera imagen -->
                    <div class="col-6 col-md-3 mt-md-0 mt-3">
                        <img src="~/imagenes/login/Distribuidores.png" class="rounded-img img-fluid rounded-circle mb-3" alt="Imagen 3">
                        <h3 class="fw-bold fs-4 m-0 mb-2">CIAC</h3>
                        <span role="complementary" class="btn-custom my-2">DISTRIBUIDORES</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="content container my-2">
            <div class="container">
                <div class="d-flex flex-column flex-md-row gap-md-5 justify-content-center align-items-center text-center">
                    <div class="col-6 col-md-3 m-0">
                    </div>
                    <div class="col-6 col-md-3 m-0">
                    </div>
                    <div class="col-12 col-md-3 m-0" v-cloak>
                        <form class="form-container w-85 w-md-auto mx-4" v-if="show.inicio">
                            <div class="mb-3">
                                <input type="text" class="form-control text-center" placeholder="USUARIO" required autocomplete="off" autofocus v-model="value.usuario">
                            </div>
                            <div class="mb-3">
                                <input type="password" class="form-control text-center" placeholder="CONTRASEÑA" required autocomplete="off" v-model="value.password">
                            </div>
                            <button type="submit" class="btn btn-custom w-100" @@click="acceso">INICIAR SESIÓN</button>
                            <a class="fs-7" @@click="abrirRecupera" role="button">Recuperación de contraseña</a>
                        </form>
                        <div v-else>
                            <button class="btn btn-info my-2 text-white" @@click="entrar">
                                <i class="bi bi-house"></i>
                                ACCEDER AL PORTAL
                            </button>                       
                        </div>
                    </div>
                </div>
            </div>      
        </div>

        <footer class="content container text-center text-white">
            <!-- Row 1 -->
            <p class="m-0">Contáctanos a través de nuestra línea telefónica y Whatsapp</p>

            <!-- Row 2 -->
            <div class="row">
                <div class="col-12  col-md-6 d-flex align-items-center justify-content-center m-0">
                    <i class="fa-solid fa-phone me-2"></i>
                    <a href="tel:8181313333" class="text-decoration-none text-white text-xl">81 8131 3333</a>
                </div>
                <div class="col-12 col-md-6 d-flex align-items-center justify-content-center m-0">
                    <i class="fa-brands fa-whatsapp me-2"></i>
                    <a href="tel:8126204545" class="text-decoration-none text-white text-xl">81 2620 4545</a>
                </div>
            </div>

        </footer>

        <!-- Modal -->
        <div class="modal fade" ref="modalRecuperacion" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header text-bg-dark">
                        <h1 class="modal-title fs-5">Recuperación de contraseña</h1>
                        <button type="button" class="btn-close bg-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <label>Usuario</label>
                        <input v-model="value.usuarioRecupera" placeholder="Ingrese su usuario" class="form-control" style="min-width:100% !important; text-align:start !important;" />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" @@click="enviaSolicitud">Enviar</button>
                    </div>
                </div>
            </div>
        </div>

    </div>


  

    <script src="~/lib/axios/axios.min.js"></script>
    <script src="~/lib/vue/vue.global.prod.js"></script>
  
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/views/login.js" asp-append-version="true"></script>
    <partial name="Alertas" />
</body>
</html>